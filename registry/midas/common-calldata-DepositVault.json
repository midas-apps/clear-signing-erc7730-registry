{
    "$schema": "../../specs/erc7730-v1.schema.json",
    "includes": "./common-eip712.json",
    "display": {
        "definitions": {
            "tokenIn": {
                "label": "Input token",
                "format": "addressName",
                "params": {
                    "type": "contract"
                }
            },
            "amountToken": {
                "label": "Input token amount",
                "format": "amount"
            },
            "minReceiveAmount": {
                "label": "Min. mToken to receive",
                "format": "amount"
            }
        },
        "formats": {
            "depositInstant(address tokenIn, uint256 amountToken, uint256 minReceiveAmount, bytes32 referrerId)": {
                "$id": "instantMint",
                "intent": "Instant Mint",
                "fields": [
                    {
                        "path": "tokenIn",
                        "$ref": "$.display.definitions.tokenIn"
                    },
                    {
                        "path": "amountToken",
                        "$ref": "$.display.definitions.amountToken"
                    },
                    {
                        "path": "minReceiveAmount",
                        "$ref": "$.display.definitions.minReceiveAmount"
                    }
                ],
                "required": [
                    "tokenIn",
                    "amountToken",
                    "minReceiveAmount"
                ]
            },
            "depositRequest(address tokenIn, uint256 amountToken, bytes32 referrerId)": {
                "$id": "mintRequest",
                "intent": "Mint request",
                "fields": [
                    {
                        "path": "tokenIn",
                        "$ref": "$.display.definitions.tokenIn"
                    },
                    {
                        "path": "amountToken",
                        "$ref": "$.display.definitions.amountToken"
                    }
                ],
                "required": [
                    "tokenIn",
                    "amountToken"
                ]
            }
        }
    }
}