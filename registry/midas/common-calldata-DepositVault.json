                    }
                ],
                "required": [
                    "tokenIn",
                    "amountToken",
                    "minReceiveAmount"
                ]
            },
            "depositRequest(address tokenIn, uint256 amountToken, bytes32 referrerId)": {
                "$id": "mintRequest",
                "intent": "$.metadata.constants.mintRequestIntent",
                "fields": [
                    {
                        "path": "tokenIn",
                        "$ref": "$.display.definitions.tokenIn"
                    },
                    {
                        "path": "amountToken",
